---
export enum Type {
	Text = 'text',
	Number = 'number',
	Email = 'email',
}

interface Props {
	id: string;
	placeholder: string;
	type: Type;
}

const { id, placeholder, type } = Astro.props;
---

<input
    type={type}
    placeholder={placeholder}
    required
    id={id}
    name={id} 
    class="border-gray-200 focus:!border-gray-500 rounded-md focus:!ring-gray-500 outline-none focus:bg-gray-100 sm:text-base text-sm"
/>
