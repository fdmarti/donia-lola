---
interface Props {
	title: string;
	description: string;
	image: string;
}

const { title, description, image } = Astro.props;
---

<div class='flex flex-col items-center hover:scale-105 transition-all ease-in duration-200'>
	<picture class='md:max-w-[250px] max-w-[200px]'>
		<img
			src={`/images/productos/${image}`}
			alt={`Imagen de ${title}`}
			loading='lazy'
			class='w-full'
		/>
	</picture>
	<h3 class='text-red-600 font-semibold text-center'>{title}</h3>
	<p class='text-gray-500 text-center max-w-[400px] text-sm'>{description}</p>
</div>
