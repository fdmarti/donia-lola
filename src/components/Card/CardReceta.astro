---
interface Props {
	title: string;
	link: string;
	image: string;
}

const { title, link, image } = Astro.props;
---

<a href={link} target='_blank'>
	<div
		class='flex flex-col gap-5 items-center hover:scale-105 transition-all ease-in duration-200'
	>
		<picture class='md:max-w-[350px] max-w-[200px]'>
			<img
				src={`/images/nuestras-recetas/recetas/${image}`}
				alt={`Imagen de ${title}`}
				loading='lazy'
				class='w-full rounded-full'
			/>
		</picture>
		<h3 class='text-red-600 font-semibold text-center text-xl'>{title}</h3>
	</div>
</a>
