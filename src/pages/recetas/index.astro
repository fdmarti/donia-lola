---
import Layout from '@/layouts/Layout.astro';
import { HeaderSection } from '@/components/shared';
import { recetas } from '@/data/recetas-list';
import CardReceta from '@/components/Card/CardReceta.astro';
---

<Layout title='Nuestras recetas - Fabrica de pastas DoÃ±a Lola'>
	<main>
		<HeaderSection bgImage='recetas-banner' title='Nuestras recetas' />

		<div class='grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 px-5 py-10 gap-10'>
			{
				recetas.map((receta) => {
					return (
						<CardReceta
							title={receta.title}
							link={receta.link}
							image={receta.image}
						/>
					);
				})
			}
		</div>
	</main>
</Layout>
