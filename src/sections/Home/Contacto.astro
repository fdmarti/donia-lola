---
import { BasicButton } from '@/components/UI';
import { Icon } from 'astro-icon/components';
---

<section class='bg-yellow-100 py-16' id='contacto'>
	<div class='flex justify-around items-center lg:flex-row flex-col'>
		<div class='flex flex-col items-center gap-6 lg:m-0 mt-5'>
			<h2 class='text-center font-semibold text-3xl text-red-600'>Contacto</h2>

			<span class='font-bold flex items-center gap-2 text-red-600'>
				<Icon name='mail-icon' />
				<a href='mailto:info@donalola.com.ar'>info@donalola.com.ar</a>
			</span>
			<span class='font-bold text-red-600 text-center'>
				¿Querés comercializar nuestros productos?
			</span>
			<BasicButton text='Formulario de contacto' />
		</div>
	</div>
</section>
